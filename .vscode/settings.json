{
  "eslint.enable": true,
  "eslint.useFlatConfig": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [
    {
      "pattern": "src/*/"
    },
    {
      "pattern": "edit-me/*/"
    },
  ],
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    ".*ClassName",
    "tw"
  ]
}